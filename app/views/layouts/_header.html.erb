<header class="navbar navbar-top navbar-inverse" style="margin-right: -10px">
  <div class="container">
    <div class="navbar-header">
      <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <div class="navbar-brand">
        <%= link_to "Restaurant App", root_path, id: "logo" %>
      </div>
    </div>
    <nav class="collapse navbar-collapse" id="navbarCollapse">
      <ul class="nav nav-tabs navbar-nav navbar-right">
        <li><%= link_to raw('<span class="glyphicon glyphicon-home"></span> Home'), '#', "data-toggle": "tab" %></li>
        <li><%= link_to "About Us", '#', "data-toggle": "tab" %></li>
        <li><%= link_to "Contact Us", '#', "data-toggle": "tab" %></li>
        <li><%= link_to "Make Your Order", '#', "data-toggle": "tab" %></li>
        <%if signed_in?%>
            <li><%=link_to current_user.email, edit_user_registration_path%></li>
            <li><%=link_to "Logout", destroy_user_session_path, method: :delete%></li>
            <li>
              <%= link_to cart_path do%>
                  <i class="fi-shopping-cart"></i>
                  My Cart
                  (<span class="cart-count"><%=current_user.cart_count%></span>)
              <%end%>
            </li>
        <%else%>
            <li><%=link_to "Register", new_user_registration_path%></li>
            <li><%=link_to "Login", new_user_session_path%></li>
        <%end%>
      </ul>
    </nav>
  </div>
</header>